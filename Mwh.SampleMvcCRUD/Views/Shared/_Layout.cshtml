@{
    var currentYear = DateTime.Now.Year.ToString();

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Mwh.Sample.Core.WebApi - Mark Hazleton">
    <meta name="author" content="Mark Hazleton">
    <title>@ViewData["Title"] - EmployeeMvcCRUD</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.20/b-1.6.1/r-2.2.3/datatables.min.css" />

    @RenderSection("HeadScripts", required: false)


</head>
<body id="page-top">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EmployeeMvcCRUD</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navEmployeeDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Employee Sample
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navEmployeeDropdown">
                                <a class="dropdown-item " asp-area="" asp-controller="Home" asp-action="EmpSinglePage">Single Page JavaScript</a>
                                <a class="dropdown-item " asp-area="" asp-controller="MvcEmployee" asp-action="Index">Mvc Employee</a>
                                <a class="dropdown-item " asp-area="" asp-controller="Employee" asp-action="Index">Employee</a>
                                <a class="dropdown-item " asp-area="" asp-controller="swagger" asp-action="index">API</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navControlOriginsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                ControlOrigins Sample
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navControlOriginsDropdown">
                                <a class="dropdown-item " asp-area="" asp-controller="Survey" asp-action="Index">Survey</a>
                            </div>
                        </li>


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        <section class="container-fluid" style="padding-top:25px;margin-top:25px;margin-bottom:25px;padding-bottom:25px;">
            @RenderBody()
        </section>
    </main>

    <footer class="container-fluid bg-dark">
        <div class="row">
            <div class="col-3 text-left text-white">
            </div>
            <div class="col-6 text-center text-white">
                &copy; 2020-@currentYear EmployeeMvcCRUD -
                <a href="https://linkedin.com/in/markhazleton" target="_blank">Mark Hazleton LinkedIn</a> -
                <a href="https://github.com/markhazleton" target="_blank">GitHub</a>
            </div>
            <div class="col-3 text-right text-white">
            </div>
        </div>
    </footer>



    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.20/b-1.6.1/r-2.2.3/datatables.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
